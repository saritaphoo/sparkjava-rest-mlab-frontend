< table.posts-table!DOCTYPE html>
<html>
{{> head }}
<body>
 {{> nav }}
 <h1>List Posts</h1>

 <style>
   /* from: https://www.w3schools.com/css/tryit.asp?filename=trycss_table_fancy */
   table.posts-table {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

table.posts-table td, table.posts-table th {
    border: 1px solid #ddd;
    padding: 8px;
}

table.posts-table tr:nth-child(even){background-color: #f2f2f2;}

table.posts-table tr:hover {background-color: #ddd;}

table.posts-table th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #4CAF50;
    color: white;
}
   
 </style>
 
 <table class="posts-table">
   <thead>
     <tr><th>id</th><th>title</th><th>categories</th></tr>
   </thead>
   <tbody class="put-posts-here">
   </tbody>
 </table>
 
 {{> bootstrap-from-cdn-body }}
 <script>    
 $(document).ready(function() {
    $.ajax({
	url: "/api/posts"
 }).then(function(data) {
    
 console.log("I got the data: " + JSON.stringify(data));
 $.each(data,function(i,post) {
     var row = $("<tr></tr>");
       row.append($("<td></td>").text(post.id));
       row.append($("<td></td>").text(post.title));
       row.append($("<td></td>").text(JSON.stringify(post.categories)));
     $('.put-posts-here').append(row);
   });
 });

});
   </script>
</body>
</html>
